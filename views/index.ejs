//layergroup (Dit is wat sven schreef als al een onderdeel van de layergroup)
if ("<%=toiletten[i].attributes.BETALEND%>" == "ja") {
  groupBetaling.push(marker);
}
var betalend = L.layerGroup(groupBetaling);

//einde layergroup

  <% }%>
